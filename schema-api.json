{
  "endpoints": [
    {
      "path": "/register_user",
      "methods": [
        {
          "method": "POST",
          "description": "Register a new user",
          "request": {
            "body": {
              "name": "John Doe",
              "email": "example@mail.com",
              "universityId": 12
            }
          },
          "response": {
            "body": {
              "id": 10,
              "name": "John Doe",
              "email": "example@mail.com",
              "universityId": 12
            }
          }
        }
      ]
    },
    {
      "path": "/subjects?userId=10",
      "methods": [
        {
          "method": "POST",
          "description": "Get a list of available subjects",
          "response": {
            "body": {
              "subjects": [
                {
                  "id": "subject_id",
                  "name": "subject1",
                  "description": "Subject description goes here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "path": "/questions",
      "methods": [
        {
          "method": "POST",
          "description": "Generate questions based on selected subjects",
          "request": {
            "body": {
              "subjectId": 10,
              "level": "easy|medium|hard",
              "numberOfQuestions": 5
            }
          },
          "response": {
            "body": {
              "questions": [
                {
                  "id": "question_id",
                  "subject": "subject1",
                  "questionText": "Question text goes here?",
                  "options": [
                    "Option 1",
                    "Option 2",
                    "Option 3",
                    "Option 4"
                  ],
                  "correctOption": 2
                }
              ]
            }
          }
        }
      ]
    },
    {
      "path": "/register_user_answers",
      "methods": [
        {
          "method": "POST",
          "description": "Submit answers for evaluation",
          "request": {
            "body": {
              "answers": [
                {
                  "userId": 10,
                  "questionId": 10,
                  "answer": "Option 2",
                  "isCorrect": true
                }
              ]
            }
          },
          "response": {
            "body": {
              "results": [
                {
                  "questionId": "question_id",
                  "correctOption": 2,
                  "selectedOption": 2
                }
              ],
              "score": 8,
              "total_questions": 10
            }
          }
        }
      ]
    }
  ]
}