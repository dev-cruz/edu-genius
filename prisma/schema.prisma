generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id    Int    @id @default(autoincrement())
  name  String
  email String
}

model Subject {
  id        Int       @id @default(autoincrement())
  name      String
  parent_id Int?
  Content   Content[]
  parent    Subject?  @relation("SubjectParent", fields: [parent_id], references: [id])
  children  Subject[] @relation("SubjectParent")
}

model Content {
  id            Int             @id @default(autoincrement())
  filepath      String
  subject_id    Int
  subject       Subject         @relation(fields: [subject_id], references: [id])
  ContentResult ContentResult[]
}

model ContentResult {
  id         Int     @id @default(autoincrement())
  level      String
  filepath   String
  status     String
  content_id Int
  content    Content @relation(fields: [content_id], references: [id])
}
